<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
   <!-- Enable Annotation based configuration -->
	<context:annotation-config />
     
 <bean id="department" class="com.spring.FirstSpringDemo.Department">
	<property name="deptName" value="HR" />
	</bean>
	
	<bean id="dept1" class="com.spring.FirstSpringDemo.Department">
	<property name="deptName" value="HR-1" />
	</bean>
	
	<bean id="dept2" class="com.spring.FirstSpringDemo.Department">
	<property name="deptName" value="HR-2" />
	</bean>
	
	<bean id="employee" class="com.spring.FirstSpringDemo.Employee">
	<property name="ename" value="Sanket" />
	</bean>
</beans>
   
     
